{
  "name": "loki_devextreme",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "apps/loki_angular/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@angular-devkit/build-angular:application",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/loki_angular",
        "index": "apps/loki_angular/src/index.html",
        "browser": "apps/loki_angular/src/main.ts",
        "polyfills": ["zone.js"],
        "tsConfig": "apps/loki_angular/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/loki_angular/public"
          },
          {
            "glob": "**/*",
            "input": "node_modules/devextreme/dist/css/icons",
            "output": "assets/devextreme-icons"
          }
        ],
        "styles": [
          "node_modules/devextreme/dist/css/dx.common.css",
          "apps/loki_angular/src/themes/generated/theme.base.dark.css",
          "apps/loki_angular/src/themes/generated/theme.base.css",
          "apps/loki_angular/src/themes/generated/theme.additional.dark.css",
          "apps/loki_angular/src/themes/generated/theme.additional.css",
          "apps/loki_angular/src/dx-styles.scss",
          "apps/loki_angular/src/variables.scss",
          "apps/loki_angular/src/styles.scss"
        ],
        "scripts": []
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "4kb",
              "maximumError": "8kb"
            }
          ],
          "outputHashing": "all"
        },
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "sourceMap": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "continuous": true,
      "executor": "@angular-devkit/build-angular:dev-server",
      "configurations": {
        "production": {
          "buildTarget": "loki_angular:build:production"
        },
        "development": {
          "buildTarget": "loki_angular:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "@angular-devkit/build-angular:extract-i18n",
      "options": {
        "buildTarget": "loki_angular:build"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/loki_angular"
      }
    },
    "serve-static": {
      "continuous": true,
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "loki_angular:build",
        "port": 4200,
        "staticFilePath": "dist/apps/loki_angular/browser",
        "spa": true
      }
    }
  }
}
